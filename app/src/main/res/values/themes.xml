<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.StartKit" parent="android:Theme.Material.Light.NoActionBar">
<!--        <item name="android:statusBarColor">@color/purple_700</item>-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.StartKit.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>
        <item name="postSplashScreenTheme">@style/Theme.StartKit</item>
    </style>

</resources>